<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Login</title>
<!-- Add Font Awesome CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }
    .login-container {
        width: 400px;
        margin: 100px auto;
        padding: 40px; /* Increased padding for more height */
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: relative;
    }
    .login-container .close-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        cursor: pointer;
    }
    .login-logo {
        text-align: center;
        margin-bottom: 20px;
    }
    .login-logo img {
        width: 150px;
        height: auto;
    }
    .form-group {
        position: relative;
        margin-bottom: 30px; /* Margin between input fields */
    }
    .form-group .fa {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
    }
    .form-group input {
        width: calc(100% - 40px);
        padding: 15px; /* Padding for more height */
        border: none;
        border-radius: 0;
        border-bottom: 1px solid transparent;
        transition: all 0.3s;
        padding-left: 31px; /* Add padding for icon */
    }
    .form-group input:focus {
        outline: none;
        border-color: #3498db;
        border-bottom-color: #3498db;
    }
    .form-group input:focus + label {
        top: 5px;
        font-size: 12px;
        color: #3498db;
    }
    .login-button {
        width: 100%;
        padding: 15px;
        background-color: #3498db;
        border: none;
        border-radius: 5px;
        color: #ffffff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .login-button:hover {
        background-color: #2980b9;
    }
    .powered-by {
        text-align: center;
        margin-top: 20px;
        color: #666666;
    }
</style>
</head>
<body>

<div id="login-container" class="login-container">
    <div class="close-icon">&#10006;</div> <!-- Close icon -->
    <div class="login-logo">
        <h1>Admin login</h1>
        <img src="" alt="Your Logo">
    </div>
    <form action="/submit" method="post" >
        <div class="form-group">
            <span class="fa fa-user"></span> <!-- Font Awesome user icon -->
            <input type="text" id="username" name="username" required placeholder="Username">
        </div>
        <div class="form-group">
            <span class="fa fa-lock"></span> <!-- Font Awesome lock icon -->
            <input type="password" id="password" name="password" required placeholder="Password">
        </div>
        <button type="submit" class="login-button">Login</button>
    </form>
    <div class="powered-by">
        Powered by Medresto
    </div>
</div>
<script>
    // Adjust the height of login-container based on its content
    const loginContainer = document.getElementById('login-container');
    const loginContainerHeight = loginContainer.offsetHeight;
    loginContainer.style.height = `${loginContainerHeight}px`;
</script>
</body>
</html>
